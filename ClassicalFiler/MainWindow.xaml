<Window x:Class="ClassicalFiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClassicalFilter" Height="350" Width="525" Initialized="Window_Initialized">
    <Grid>
        <DataGrid Name="dataGrid" AutoGenerateColumns="False" GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Header="名前" Binding="{Binding Name}" />
                <DataGridTextColumn Header="更新日時" Binding="{Binding LastWriteTime}" />
                <DataGridTextColumn Header="種類" Binding="{Binding Extention}" />
                <DataGridTextColumn Header="サイズ" Binding="{Binding Length}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
